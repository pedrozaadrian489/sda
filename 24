Vue.component("v-modal",{name:"v-modal",template:'<b-modal :static="staticModal" v-bind:ref="id" v-bind:size="size" :body-class="bodyClass" :content-class="contentClass" :modal-class="modalClass" :centered="centered" v-bind:id="id" hide-footer @shown="doShown" :hide-header-close="hideHeaderClose" :no-close-on-backdrop="noCloseOnBackdrop" :no-close-on-esc="noCloseOnEsc" @hidden="doHide" @click.native.stop="doHide2"><div class="d-block text-center"><span class="modal-icon"><i class="far fe-exclamation-triangle icon-warning" v-if="variant === \'warning\'"></i><i class="far fe-comment-alt-exclamation-blue icon-comment imgTokenPassAvv" v-if="variant === \'comment\'"></i><i class="far fa-check-circle icon-success imgTokenPassAvvResult" v-if="variant === \'success\'"></i><i class="fas fa-spinner icon-loading fa-spin" v-if="variant === \'loading\'"></i><i class="far fa-check-circle  icon-success" v-if="variant === \'check\'"></i><i class="fas fa-pencil-alt  icon-comment" v-if="variant === \'edit\'"></i></span><alert id="alertModal" ref="alertModal" v-if="configAlert.active" variant="warning"><span v-html="configAlert.msg"></span> </alert><h3 v-if="title" :style="\'font-size:\'+fontSize+\'px;\'" :class="\'font-l my-2 \'+classH3" v-html="title"></h3><slot /></div></b-modal>',props:{id:{required:false,},title:{required:false,},variant:{required:false,},"config-alert":{"default":{active:false,msg:""}},size:{required:false,},centered:{"default":"centered",},staticModal:{type:Boolean,"default":true,},"font-size":{type:String,"default":"24",},"class-h3":{type:String,"default":"",},bodyClass:{type:String,"default":"",},"content-class":{type:String,"default":"",},"modal-class":{type:String,"default":"",},"hide-header-close":{type:Boolean,"default":false,},"no-close-on-backdrop":{type:Boolean,"default":false,},"no-close-on-esc":{type:Boolean,"default":false,},},methods:{doShown:function(a){this.$emit("shown")},doHide:function(){this.$emit("hidden")},doHide2:function(){this.$emit("hide")}}});Vue.component("v-modal-onboarding",{template:'<transition name="modal-fade"><div v-if="isVisible" class="modal-onboarding-overlay" @click.self="closeOnBackdrop ? close() : null"><div class="modal-onboarding-container" :class="{ \'modal-onboarding-centered\': centered }" :style="containerStyle"><div class="modal-onboarding-content" :style="modalContentStyle"><div class="modal-onboarding-header"><button v-if="!hideHeaderClose" class="onboarding-close-button" @click="close">&times;</button></div><div class="modal-onboarding-body" :class="bodyClass"><slot></slot></div></div></div></div></transition>',props:{value:{type:Boolean,"default":false},title:{type:String,"default":""},centered:{type:Boolean,"default":true},hideHeaderClose:{type:Boolean,"default":false},closeOnBackdrop:{type:Boolean,"default":true},closeOnEsc:{type:Boolean,"default":true},bodyClass:{type:String,"default":""},backgroundColor:{type:String,"default":"#FFFFFF"},width:{type:[String,Number],"default":1024},height:{type:[String,Number],"default":552},borderRadius:{type:String,"default":"10px"},},data:function(){return{isVisible:this.value}},computed:{containerStyle:function(){return{width:typeof this.width==="number"?this.width+"px":this.width,height:typeof this.height==="number"?this.height+"px":this.height,}},modalContentStyle:function(){return{backgroundColor:this.backgroundColor,borderRadius:this.borderRadius,width:"100%",height:"100%"}}},watch:{value:function(a){this.isVisible=a;this.handleVisibilityChange(a)}},mounted:function(){if(this.value){document.body.style.overflow="hidden";document.addEventListener("keydown",this.handleEscKey)}},beforeDestroy:function(){document.body.style.overflow="";document.removeEventListener("keydown",this.handleEscKey)},methods:{close:function(){this.isVisible=false;this.$emit("input",false);this.$emit("hidden");this.$emit("hide")},handleEscKey:function(a){if(this.closeOnEsc&&a.key==="Escape"){this.close()}},handleVisibilityChange:function(a){if(a){document.body.style.overflow="hidden";document.addEventListener("keydown",this.handleEscKey);this.$nextTick(function(){this.$emit("shown")})}else{this.cleanupEventListeners()}},cleanupEventListeners:function(){document.body.style.overflow="";document.removeEventListener("keydown",this.handleEscKey)}}});