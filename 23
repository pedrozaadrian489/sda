Vue.component("spinner-vue",{name:"spinner-vue",template:'<b-overlay id="overlay-background":show="true"style="display:none; position:fixed; z-index: 1200;":variant="variant":opacity="opacity":blur="blur"rounded="sm"no-wrap><template #overlay><div class="text-center display-grid"><b-spinner></b-spinner><span v-if="lang != \'\'" class="text-spinner" v-html="lang"></span></div></template></b-overlay>',props:{lang:{type:String,"default":"",}},data:function(){return{busy:true,variant:"light",opacity:0.85,blur:"2px",timeoutSpinner:null}},methods:{startSpinnerVue:function(){$("#"+this.$el.id).removeClass("position-absolute");$("#"+this.$el.id).show()},finishSpinnerVue:function(){if(this.timeoutSpinner){clearTimeout(this.timeoutSpinner);this.timeoutSpinner=null}this.timeoutSpinner=setTimeout(function(){$("#"+this.$el.id).hide()}.bind(this),200)}}});